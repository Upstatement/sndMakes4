<div class="tz">

	<h4 class="tz-source"><a class="source-link" href="#">{{newsItem.source.name}}</h4>
	<h1 class="tz-head">
		<a class="tz-head-link" href="#">{{ newsItem.headline }}</a>
	</h1>

	<div class="tz-meta">
		<h4 class="tz-timestamp">{{ newsItem.publishedDate }}</h4>
		<h4 class="tz-byline">By <span class="tz-author">Nite Plummer</span></h4>
	</div> <!-- /tz-meta -->

	<div class="tz-content">
		<p class="tz-text">{{ newsItem.content }}</p>
	</div> <!-- /tz-content -->

	<div class="tz-social">
		<ul class="social-heat-items">
			{% for i in newsItem.social.score %}
			<li class="social-heat-iteam"></li>
			{% endfor %}
		</ul>

		<p class="social-shares"><span class="fb-shares">{{ newsItem.social.facebook }}</span>Facebook Shares</p>
		<p class="social-shares"><span class="twitter-share">{{ newsItem.social.twitter }}</span>Retweets</p>

	</div> <!-- /tz-social -->

</div> <!-- /tz-->
